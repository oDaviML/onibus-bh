{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/componentes/*.*",
			"**/contexts/**/*",
			"**/data/**/*",
			"**/hooks/**/*",
			"**/lib/**/*",
			"**/pages/**/*",
			"**/routes/**/*",
			"**/services/**/*",
			"**/types/**/*",
			"**/index.html",
			"**/vite.config.js",
			"!**/routes/routeTree.gen.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
